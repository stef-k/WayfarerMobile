<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:shimmer="clr-namespace:Syncfusion.Maui.Toolkit.Shimmer;assembly=Syncfusion.Maui.Toolkit"
             x:Class="WayfarerMobile.Shared.Controls.ShimmerLoadingView"
             x:Name="Root">

    <!-- Using built-in CirclePersona type for list-style shimmer -->
    <shimmer:SfShimmer IsActive="{Binding IsActive, Source={x:Reference Root}}"
                       Type="CirclePersona"
                       AnimationDuration="1000"
                       Fill="{AppThemeBinding Light={StaticResource Surface}, Dark={StaticResource SurfaceDark}}"
                       WaveColor="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray600}}"
                       RepeatCount="{Binding RepeatCount, Source={x:Reference Root}}" />

</ContentView>
