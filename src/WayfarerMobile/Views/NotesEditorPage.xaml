<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:WayfarerMobile.ViewModels"
             x:Class="WayfarerMobile.Views.NotesEditorPage"
             x:DataType="viewmodels:NotesEditorViewModel"
             Title="{Binding Title}"
             Shell.PresentationMode="ModalAnimated">

    <Shell.BackButtonBehavior>
        <BackButtonBehavior IsVisible="False" />
    </Shell.BackButtonBehavior>

    <Grid RowDefinitions="Auto,*,Auto">
        <!-- Header -->
        <Grid Grid.Row="0"
              BackgroundColor="{StaticResource Primary}"
              Padding="16,12"
              ColumnDefinitions="Auto,*,Auto">
            <Button Text="Cancel"
                    FontSize="14"
                    Padding="12,8"
                    BackgroundColor="Transparent"
                    TextColor="White"
                    Command="{Binding CancelCommand}" />
            <Label Grid.Column="1"
                   Text="Edit Notes"
                   FontSize="18"
                   FontAttributes="Bold"
                   TextColor="White"
                   HorizontalTextAlignment="Center"
                   VerticalTextAlignment="Center" />
            <Button Grid.Column="2"
                    Text="Save"
                    FontSize="14"
                    FontAttributes="Bold"
                    Padding="12,8"
                    BackgroundColor="White"
                    TextColor="{StaticResource Primary}"
                    CornerRadius="8"
                    Command="{Binding SaveCommand}"
                    IsEnabled="{Binding IsSaving, Converter={StaticResource InvertedBoolConverter}}" />
        </Grid>

        <!-- Editor WebView -->
        <WebView x:Name="EditorWebView"
                 Grid.Row="1"
                 HorizontalOptions="Fill"
                 VerticalOptions="Fill" />

        <!-- Saving Overlay -->
        <Grid Grid.Row="1"
              IsVisible="{Binding IsSaving}"
              BackgroundColor="#80000000"
              InputTransparent="False">
            <ActivityIndicator IsRunning="True"
                               Color="White"
                               HorizontalOptions="Center"
                               VerticalOptions="Center" />
        </Grid>

        <!-- Unsaved changes indicator -->
        <Border Grid.Row="2"
                IsVisible="{Binding HasChanges}"
                Padding="12,8"
                BackgroundColor="{StaticResource Warning}"
                StrokeThickness="0">
            <Label Text="You have unsaved changes"
                   FontSize="12"
                   TextColor="White"
                   HorizontalTextAlignment="Center" />
        </Border>
    </Grid>
</ContentPage>
